{
  "name": "@kettil/tool-lib",
  "version": "2.2.0",
  "description": "A collection from differents helper functions and types",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "prebuild": "rm -rf ./build",
    "test": "jest --config=jest.json --coverage",
    "test:watch": "npm run test -- --watch 'src'",
    "test:coverage": "jest-cpf --config=jest.json",
    "test:ci": "jest --config=jest.ci.js --coverage --ci",
    "lint": "eslint --config .eslintrc.json --ext 'js,ts,tsx' --fix .",
    "lint:ci": "eslint --config .eslintrc.json --ext 'js,ts,tsx' --format codeframe .",
    "prettier": "prettier --config './.prettierrc' --write '.prettierrc' './**/*.{ts,tsx,js,jsx,json,md,scss,yml,html}'",
    "prettier:ci": "prettier --config './.prettierrc' --list-different '.prettierrc' './**/*.{json,md,scss,yml,html}'",
    "git:change": "echo npm install",
    "git:commit": "npm run prettier:ci && npm run lint:ci",
    "git:push": "npm run git:commit && npm run test"
  },
  "keywords": [
    "tools"
  ],
  "author": "Kjell Die√üel <development@kettil.de>",
  "license": "MIT",
  "engines": {
    "node": ">= 10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kettil/tool-lib"
  },
  "bugs": {
    "url": "https://github.com/kettil/tool-lib/issues/new"
  },
  "dependencies": {},
  "devDependencies": {
    "@kettil/eslint-config": "^1.2.9",
    "@kettil/semantic-release-config": "^1.0.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "eslint": "^6.0.0",
    "eslint-plugin-jest": "^23.17.1",
    "husky": "^4.2.5",
    "jest": "^25.0.0",
    "jest-cpf": "^1.0.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.5"
  }
}
